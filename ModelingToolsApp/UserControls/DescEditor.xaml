<UserControl x:Class="ModelingToolsApp.UserControls.DescEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"            
             Height="30" MinWidth="30" 
             Visibility="Hidden" Background="Transparent">
    <Grid>
        <Rectangle Stroke="Black" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="6.5,6.5,6.5,6.5"></Rectangle>
        <Rectangle Stroke="Lime" StrokeDashArray="3,3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="6.5,6.5,6.5,6.5"></Rectangle>
        <TextBox x:Name="txtEditor"  BorderThickness="0"  Margin="6.5,6.5,6.5,6.5"
                 HorizontalAlignment="Center" VerticalAlignment="Center" 
                 TextWrapping="Wrap" LostFocus="txtEditor_LostFocus" TextChanged="txtEditor_TextChanged" ></TextBox>
    </Grid>
</UserControl>
