<UserControl x:Class="ModelingToolsApp.UserControls.OJudgeShape"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"           
             Height="42" Width="102">
    <Grid >
        <Polygon Points="50,0 100,20 50,40 0,20" Stroke="Black" Fill="White" 
                 HorizontalAlignment="Center" VerticalAlignment="Center"></Polygon>
        <Label HorizontalAlignment="Center" VerticalAlignment="Center">判断</Label>
        <Polygon  x:Name="path" Points="50,0 100,20 50,40 0,20" Stroke="Black" Fill="Transparent" 
                 HorizontalAlignment="Center" VerticalAlignment="Center" MouseEnter="Polygon_MouseEnter"></Polygon>
    </Grid>
</UserControl>
