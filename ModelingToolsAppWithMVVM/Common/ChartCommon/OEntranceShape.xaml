<UserControl x:Class="ModelingToolsAppWithMVVM.Common.ChartCommon.OEntranceShape"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"           
             Height="42" Width="102">
    <Grid Background="Transparent">
        <Ellipse Stroke="Black" Width="40" Height="40"  Fill="Black" ToolTip="入口"
                   HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False"></Ellipse>
        <Label HorizontalAlignment="Center" VerticalAlignment="Center">入口</Label>
        <Ellipse x:Name="path" Stroke="Black" Width="40" Height="40" ToolTip="入口" Fill="Transparent"
                   HorizontalAlignment="Center" VerticalAlignment="Center" MouseEnter="Ellipse_MouseEnter"
                   MouseLeftButtonDown="Ellipse_MouseLeftButtonDown"></Ellipse>
    </Grid>   
</UserControl>
