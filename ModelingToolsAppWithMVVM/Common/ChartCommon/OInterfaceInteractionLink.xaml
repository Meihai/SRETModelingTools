<UserControl x:Class="ModelingToolsAppWithMVVM.Common.ChartCommon.OInterfaceInteractionLink"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"            
             Height="42" Width="102">
    <Grid>
        <Polyline Points="0,0 100,0" Stroke="Black" HorizontalAlignment="Center" ToolTip="连接线" VerticalAlignment="Center"></Polyline>
        <!--
        <Label HorizontalAlignment="Center" VerticalAlignment="Center" >连接线</Label>
        -->
        <Polyline x:Name="terminalShapePath" Points="100,21 90,17 90,25" Fill="Black" ></Polyline>
        <Polyline x:Name="path" Points="0,20 100,20" Stroke="Transparent" StrokeThickness="13" 
                  HorizontalAlignment="Center" VerticalAlignment="Center" ToolTip="连接线" MouseEnter="Polyline_MouseEnter"></Polyline>
    </Grid>
</UserControl>