<UserControl x:Class="ModelingToolsAppWithMVVM.Common.ChartCommon.OOperationShape"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"            
             Height="40" Width="102">
    <Grid Background="Transparent">
        <Ellipse Fill="LightGray"  Stroke="Black" Width="80" Height="40" ToolTip="操作"
                 HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False">           
        </Ellipse>
        <Label HorizontalAlignment="Center" VerticalAlignment="Center">操作</Label>
        <Ellipse x:Name="path" Stroke="Black" Width="80" Height="40"  Fill="Transparent" ToolTip="操作"
                   HorizontalAlignment="Center" VerticalAlignment="Center" MouseEnter="Ellipse_MouseEnter"></Ellipse>
    </Grid>
   
</UserControl>
