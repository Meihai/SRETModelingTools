<Window x:Class="ModelingToolsAppWithMVVM.View.SwitchViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ModelingToolsAppWithMVVM.View"
        xmlns:vm="clr-namespace:ModelingToolsAppWithMVVM.ViewModel"
        Title="SwitchViewWindow" Height="350" Width="525">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:SwitchView1ViewModel}">
            <local:SwitchView1/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SwitchView2ViewModel}">
            <local:SwitchView2/>
        </DataTemplate>
    </Window.Resources>
    <Window.DataContext>
        <vm:SwitchViewViewModel></vm:SwitchViewViewModel>
    </Window.DataContext>
    <Grid>
        <ContentControl Content="{Binding CurrentView}"/>
    </Grid>
</Window>
